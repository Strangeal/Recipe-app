<h1>Add food form</h1>

  <%= form_with model: @foods , url: foods_path, data: {turbo: false} do |f|%>
    <% if @food.errors.any? %>
      <div class="alert alert-danger">
        <% @food.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="form__container">
      <div class="form_control">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form_control">
        <%= f.label :measurement_unit %>
        <%= f.select :measurement_unit, ['gram', 'kilogram', 'cup', 'tablespoon']%>
      </div>
      <div class="form_control">
        <%= f.label :price %>
        <%= f.text_field :price %>
      </div>
      <div class="form_control">
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
      </div>

      <%= f.submit %>
    <div>
  <% end %>