<div class="foods_table">
<h2> Welcome to the Food Index </h2>

<%= link_to 'Add Food', new_food_path %>
  <table>
    <tr>
      <th>Foods</th>
      <th>Measurement unit</th>
      <th>Unit price</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name%></td>
        <td><%= food.measurement_unit%></td>
        <td>$<%= food.price%></td>
        <td><%= food.quantity%></td>
          <% if can? :destroy, food %>
          <td><%= button_to 'Delete', food_path(food), method: :delete %></td>
          <% end %>
      </tr>
    <% end %>
  </table>
</div>

